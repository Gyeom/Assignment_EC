<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:colorBackground">#000000</item>
    </style>
    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#BDBDBD</item>                   <!-- 배경 -->
        <item name="android:textColorPrimary">#FF0000</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">#000000</item>     <!-- 탭바 텍스트 -->
        <item name="android:textStyle">bold</item>
        <item name="tabIndicatorColor">#FF0000</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
